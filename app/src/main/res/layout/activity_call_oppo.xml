<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundsamsaung"
    android:gravity="center_horizontal"
    tools:context=".ActivityCall.ActivityCallOppo">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuộc gọi đến "
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="#F1F1F1"
        android:textSize="18dp"

        />
    <TextView
        android:id="@+id/Name"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Nguyễn Thị  Hường  "
        android:textColor="#F1F1F1"
        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/group"
        android:layout_below="@id/Name"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dũng"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/number"
        android:layout_below="@id/group"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0123456789"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:textSize="20dp"

        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_below="@id/number"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/gallery_btn_2"
        app:civ_border_color="#858585"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="40dp"
        >
        <LinearLayout
            android:layout_marginBottom="80dp"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="30dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#3AFA42"
                app:cardCornerRadius="200dp"
                >
                <ImageView
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/call"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="80dp"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity=""
            >
            <androidx.cardview.widget.CardView

                android:layout_marginRight="30dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#FF0000"
                app:cardCornerRadius="90dp"
                >
                <ImageView
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/uncall" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>